<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE datasources> 

<datasources>

	<datasource jndi-name="jdbc/jeesMySql" pool-name="mysqlPool">
	
		<connection-url>jdbc:mysql://localhost:3306/test</connection-url>
		
		<driver>mysql-connector-java-5.1.36-bin.jar</driver>
		
		<security>
			<user-name>root</user-name>
			<password></password>
		</security>
		
		
		<pool>
			<min-pool-size>10</min-pool-size>
			<max-pool-size>20</max-pool-size>
			<prefill>true</prefill>
		</pool>
		
	</datasource>

</datasources>