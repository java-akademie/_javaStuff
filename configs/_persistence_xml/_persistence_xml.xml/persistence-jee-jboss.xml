<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="jees">

		<!-- DataSources: -->
		<!-- . java:/jdbc/jeesH2 -->
		<!-- . java:/jdbc/jeesOracle -->
		<!-- . java:/jdbc/jeesPostgres -->
		<!-- . java:/jdbc/jeesMySql -->
		<jta-data-source>java:/jdbc/jeesPostgres</jta-data-source>

		<properties>

			<!-- Dialects: -->
			<!-- . org.hibernate.dialect.MySQLInnoDBDialect -->
			<!-- . org.hibernate.dialect.OracleDialect -->
			<!-- . org.hibernate.dialect.PostgreDialect -->
			<!-- . org.hibernate.dialect.H2Dialect -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgresDialect" />

			<!-- validate | update | create | create-drop -->
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />

			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />

		</properties>

	</persistence-unit>

</persistence>