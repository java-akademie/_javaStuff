<?xml version="1.0" encoding="UTF-8"?>

<!-- ************************************************************** -->
<!-- jees-ds.xml - fuer JBoss                                       -->
<!-- ************************************************************** -->
<!-- die Datenbanken muessen so wie in <connection-url> beschrieben -->
<!-- vorhanden sein                                                 -->
<!-- ************************************************************** -->
<!-- diese Datei (jees-ds.xml muss in das Verzeichnis               -->
<!-- JBOSS_HOME/server/default/deploy kopiert werden                -->
<!--                                                                -->
<!-- die dbDriver.jar Dateien muessen vom JBoss-Server              -->
<!-- gefunden werden und deshalb in das Verzeichnis                 -->
<!-- JBOSS_HOME/server/default/lib kopiert werden                   -->
<!-- ************************************************************** -->

<datasources>

	<local-tx-datasource>
		<jndi-name>jdbc/jeesH2</jndi-name>
		<connection-url>jdbc:h2:tcp://localhost/~/test</connection-url>
		<driver-class>org.h2.Driver</driver-class>
		<user-name>sa</user-name>
		<password></password>
	</local-tx-datasource>



</datasources>